@model RentalApp.Models.ViewModels.VehicleRegisterView

@{
    ViewBag.Title = "Delete";
}

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (ViewBag.UserRole == "Admin")
                    {
                        <li>@Html.ActionLink("Dashboard", "AdminDashboard", new { Controller = "Dashboard", @Id = ViewBag.UserId })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Dashboard", "VendorDashboard", new { Controller = "Dashboard", @Id = ViewBag.UserId })</li>
                    }
                    <li style="padding-left: 250px;">@Html.ActionLink("Logout", "SignOut", new { Controller = "Login" })</li>
                </ul>
            </div>
        </div>
    </div>

<h3>Are you sure you want to delete this Vehicle Details?</h3>
<div>    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RegistrationNo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RegistrationNo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ManufactureYear)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ManufactureYear)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Make)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Make)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.VehicleModel)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.VehicleModel)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Color)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Color)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RentPerDay)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RentPerDay)
        </dd>
        @if (ViewBag.UserRole == "Admin")
        {
            <dt>
                @Html.DisplayNameFor(model => model.OwnerId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.OwnerId)
            </dd>
        }
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" onclick="window.location = @Url.Action("Delete", "Vehicle", new { @UserId = ViewBag.UserId , @VehicleId = ViewBag.VehicleId })" />
        @if (ViewBag.UserRole == "Admin")
        {
            <p class="btn btn-default">@Html.ActionLink("Cancel", "AdminDashboard", new { controller = "Dashboard", @Id = ViewBag.UserId })</p>
        }
        else
        {
            <p class="btn btn-default">@Html.ActionLink("Cancel", "VendorDashboard", new { controller = "Dashboard", @Id = ViewBag.UserId })</p>
        }
    </div>
    }
</div>
